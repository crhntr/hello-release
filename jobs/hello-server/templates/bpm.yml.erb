---
processes:
- name: hello-server
  executable: /var/vcap/packages/hello-server/hello-server

  env:
    PORT: "<%= p('port') %>"

  limits:
    processes: 10
    open_files: 1000

  ephemeral_disk: true

  additional_volumes:
  - path: /var/vcap/data/sockets
    writable: true

  capabilities:
  - NET_BIND_SERVICE
