#!/bin/bash

RUN_DIR=/var/vcap/sys/run/hello-server
LOG_DIR=/var/vcap/sys/log/hello-server
PIDFILE=${RUN_DIR}/pid

case $1 in

  start)
    mkdir -p $RUN_DIR $LOG_DIR
    chown -R vcap:vcap $RUN_DIR $LOG_DIR

    echo $$ > $PIDFILE

    cd /var/vcap/packages/hello-server || exit 1

    export PORT="<%= p('port') %>"
    /var/vcap/packages/hello-server/hello-server \
      >>  $LOG_DIR/main.stdout.log \
      2>> $LOG_DIR/main.stderr.log

    ;;

  stop)
    kill -9 "$(cat $PIDFILE)"
    rm -f $PIDFILE

    ;;

  *)
    echo "Usage: ctl {start|stop}" ;;

esac